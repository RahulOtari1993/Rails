<p id="notice"><%= notice %></p>

<h1>Achievements</h1>

<table class="table table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Player</th>
      <th>Award</th>
      <th>Medal</th>
      <%if current_user && current_user.player?%>
        <th>Status</th>
      <%end%> 
      <th>Button</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @achievements.each do |achievement| %>
      <tr>
        <td><%= achievement.player.player_name %></td>
        <td><%= achievement.award %></td>
        <td><%= achievement.medal %></td>
        <%if current_user && current_user.player?%>
          <td><%= achievement.status %></td>
        <% end %>
        <td><%= link_to 'Show', achievement,class:"btn btn-success" %>
        <%= link_to 'Edit', edit_achievement_path(achievement),class:"btn btn-success" %>
        <%= link_to 'Destroy', achievement, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%if current_user && current_user.player?%>
<%= link_to 'New Achievement', new_achievement_path, class:"btn btn-dark" %>
<% end %>
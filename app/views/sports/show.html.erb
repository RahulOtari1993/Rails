<p id="notice"><%= notice %></p>

<h2>Players</h2>
<% for player in @sport.players %>
    <ul>
      <li><%= player.player_name %></li>
  </ul>
<% end %>

<h2>Posts</h2>
<% for post in @sport.posts %>
    <ul>
      <li><%= post.title %></li>
  </ul>
<% end %>

<h2>Sport Announcement</h2>
<% for sportannouncement in @sport.sportannouncements %>
    <ul>
      <li><%= sportannouncement.msg %></li>
  </ul>
<% end %>

  <%= link_to 'Edit', edit_sport_path(@sport),class:"btn btn-dark" %> 
  <%= link_to 'Add Player', sport_players_path(@sport),class:"btn btn-dark" %>
  <%= link_to 'Add Post', sport_posts_path(@sport), class:"btn btn-dark" %>
  <%= link_to 'Add Sportannouncement', sport_sportannouncements_path(@sport), class:"btn btn-dark" %>
<%= link_to 'Back', sports_path, class:"btn btn-dark" %>


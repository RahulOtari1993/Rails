<% custom_css = @template.element_css_style %>
<style media="screen">

    .custom-header {
      font-size: <%= @template.header_font_size.present? ? "#{@template.header_font_size}px" : '1.1rem' %>;
      color: <%= @template.header_font_color.present? ? "#{@template.header_font_color}" : '#fefefe' %>;
    }

    .footer_bottom {
      background-color: <%= @template.footer_background_color.present? ? @template.footer_background_color : '#BB0000' %> !important;
      color: <%= @template.footer_font_color.present? ? @template.footer_font_color : '#fefefe' %>;
    }

    .footer_bottom a:hover {
      text-decoration: none;
    }

    .footer_bottom p, .footer_bottom a {
      font-size: <%= @template.footer_font_size.present? ? "#{@template.footer_font_size}px" : '1.1rem' %>;
      color: <%= @template.footer_font_color.present? ? @template.footer_font_color : '#333' %> !important;
    }

    <% if custom_css['body'].present? %>
      .custom-body {
        <% custom_css['body'].each do |item| %>
          <%= item['name'] %>: <%= item['value'] %><%= item['unit'] %> !important;
        <% end %>
      }
    <% else %>
      .custom-body {
        margin: 0;
        font-family: 'proxima-nova', sans-serif;
        color: #202020;
        font-size: 1rem;
        font-weight: 400;
        line-height: 1.5;
        text-align: left;
        background-color: #fff;
      }

    <% end %>

    <% if custom_css['a'].present? %>
      .custom-a {
        <% custom_css['a'].each do |item| %>
          <%= item['name'] %>: <%= item['value'] %><%= item['unit'] %> !important;
        <% end %>
      }
    <% else %>
      .custom-a {
        text-decoration: none;
        background-color: transparent;
        font-size: 1.1rem;
        color: #333 !important;
      }
    <% end %>

    <% if custom_css['a-hover'].present? %>
      .custom-a:hover {
        <% custom_css['a-hover'].each do |item| %>
          <%= item['name'] %>: <%= item['value'] %><%= item['unit'] %> !important;
        <% end %>
      }
    <% else %>
      .custom-a:hover {
        color: #333 !important;
        text-decoration: none;
      }
    <% end %>



    <% if custom_css['h1'].present? %>
      .custom_h1 {
        <% custom_css['h1'].each do |item| %>
          <%= item['name'] %>: <%= item['value'] %><%= item['unit'] %> !important;
        <% end %>
      }
    <% else %>
      .custom_h1 {
        color: #202020;
        font-size: 52px;
        font-weight: 600;
        line-height: 55px;
      }
    <% end %>

    <% if custom_css['h2'].present? %>
      .custom_h2 {
        <% custom_css['h2'].each do |item| %>
          <%= item['name'] %>: <%= item['value'] %><%= item['unit'] %> !important;
        <% end %>
      }
    <% else %>
      .custom_h2 {
        font-family: "proxima-nova", Sans-serif;
        font-size: 4em;
        font-weight: 900;
        line-height: 68px;
        letter-spacing: -1.7px;
        color: #000000;
        margin: 0px 0px 0px 0px;
      }
    <% end %>

    <% if custom_css['h3'].present? %>
      .custom_h3 {
        <% custom_css['h3'].each do |item| %>
          <%= item['name'] %>: <%= item['value'] %><%= item['unit'] %> !important;
        <% end %>
      }
    <% else %>
      .custom_h3 {
        font-size: 2rem;
        line-height: 35px;
        font-weight: 700;
      }
    <% end %>

    <% if custom_css['h4'].present? %>
      .custom_h4 {
        <% custom_css['h4'].each do |item| %>
          <%= item['name'] %>: <%= item['value'] %><%= item['unit'] %> !important;
        <% end %>
      }
    <% else %>
      .custom_h4 {
          font-size: 1.5rem;
          font-family: inherit;
          font-weight: 500;
          line-height: 1.2;
          color: inherit;
      }
    <% end %>

    <% if custom_css['h5'].present? %>
      .custom_h5 {
        <% custom_css['h5'].each do |item| %>
          <%= item['name'] %>: <%= item['value'] %><%= item['unit'] %> !important;
        <% end %>
      }
    <% else %>
      .custom_h5 {
          font-size: 1.75rem;
          font-family: inherit;
          font-weight: 500;
      }
    <% end %>

    <% if custom_css['h6'].present? %>
      .custom_h6 {
        <% custom_css['h6'].each do |item| %>
          <%= item['name'] %>: <%= item['value'] %><%= item['unit'] %> !important;
        <% end %>
      }
    <% else %>
      .custom_h6 {
        font-size: 18px;
        font-family: inherit;
        font-weight: 400;
        line-height: 1.2;
        color: inherit;
      }
    <% end %>


    <% if custom_css['custom-button'].present? %>
    .custom_btn {
      <% custom_css['custom-button'].each do |item| %>
        <%= item['name'] %>: <%= item['value'] %><%= item['unit'] %> !important;
      <% end %>
    }
    <% else %>
      .custom_btn {
          background-color: #ff0000;
          color: #fff;
          outline: none;
          border: none;
          border-radius: 20px;
          font-size: 13px;
          font-weight: 900;
          padding: 10px 30px;
          box-shadow: none;
      }
    <% end %>

    <% if custom_css['custom-button-hover'].present? %>
    .custom_btn:hover {
      <% custom_css['custom-button-hover'].each do |item| %>
        <%= item['name'] %>: <%= item['value'] %><%= item['unit'] %> !important;
      <% end %>
    }
    <% else %>
      .custom_btn:hover {
        color: #fff !important;
      }
    <% end %>

    .custom_btn:focus {
      box-shadow: none !important;
      outline: none !important;
    }

    <% if custom_css['input-label'].present? %>
    <% else %>
    <% end %>

    <% if custom_css['form-control'].present? %>
    <% else %>
    <% end %>

    <% if custom_css['form-control-hover'].present? %>
    <% else %>
    <% end %>

</style>

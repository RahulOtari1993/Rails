<header>
  <!-- Fixed navbar -->
  <nav class="navbar navbar-expand-md fixed-top custom_nav">
    <div class="container">
      <a class="navbar-brand" href="#">
        <img class="logo_image" src="<%= list_header_logo %>">
      </a>
      <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="navbar-collapse collapse" id="navbarCollapse" style="">
        <ul class="navbar-nav mr-auto">
        </ul>

        <% if current_participant.present? %>
          <ul class="navbar-nav">
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <%= image_tag(get_profile_avatar_url, class: "rounded-circle", width: "35", height: "35") %>
                <span class='username'><%= "Hi! #{current_participant.first_name} +#{current_participant.unused_points.to_i} GoBucks"%></span>
              </a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                <a href="javascript:void(0);" class="dropdown-item edit-participant-profile-btn">My Account</a>
                <%= link_to('Logout', destroy_participant_session_path, method: :delete, class: "dropdown-item") %>
              </div>
            </li>
          </ul>
        <% else %>
          <div class="mobile_header_btn_box">
            <a href="#" class="btn header_login_btn mr-3" data-toggle="modal" data-target="#sign_in_modal"><i class="fa fa-chevron-right" aria-hidden="true"></i> Log In</a>
            <a href="#" class="btn header_join_now_btn" data-toggle="modal" data-target="#join_now_modal">JOIN NOW</a>
          </div>
        <% end %>
      </div>
    </div>
  </nav>
</header>

<div class="mobile_header_btn_box">
  <button class="btn header_login_btn mr-3"><i class="fa fa-chevron-right" aria-hidden="true"></i> Log In</button>
  <button class="btn header_join_now_btn" data-toggle="modal" data-target="#join_now_modal">JOIN NOW</button>
</div>

<% if current_participant.blank? %>
  <!-- Sign Up Modal-->
  <%= render 'modals/sign_up_participant' %>
  <%#= render 'modals/sign_up' %>

  <!-- Sign In Modal-->
  <%= render 'modals/sign_in_participant' %>
<% else %>
  <!-- On-boarding Questions Modal -->
  <% challenge = check_onboarding_challege %>
  <% if challenge.present? %>
    <% submitted = check_onboarding_challege_submission challenge.first %>
    <% unless submitted %>
      <%= render 'participants/challenges/modals/onboarding_questions_modal', challenge: challenge.first %>
    <% end %>
  <% end %>
<% end %>

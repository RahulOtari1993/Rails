
<% if @reward.selection == "redeem" %>
  $('.reward-claim-modal').html("<%= escape_javascript render '/participants/rewards/modals/cash_in_modal', reward: @reward %>");
  $('#cash_in_modal').modal('show');
<% elsif @reward.selection == "manual" %>
  $('.reward-claim-modal').html("<%= escape_javascript render '/participants/rewards/modals/manual_modal', reward: @reward %>");
  $('#manual_modal').modal('show');
<% elsif @reward.selection == "sweepstake" %>
  $('.reward-claim-modal').html("<%= escape_javascript render '/participants/rewards/modals/sweepstake_modal', reward: @reward %>");
  $('#sweepstake_modal').modal('show');
<% end %>

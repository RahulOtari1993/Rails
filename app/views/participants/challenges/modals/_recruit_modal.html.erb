<div class="modal fade text-left challenge-modal" id="recruit_modal">
  <div class="modal-dialog">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header border-bottom-0">
        <div class="row">
          <div class="col-12">
            <h4 class="modal-title"><%= challenge.caption %></h4>
          </div>
        </div>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
        <div class="challenge-content">
          <h4><b class="text-center"><%= challenge.title %></b></h4>
          <h6><%= challenge.description %></h6>
          <div class="row">
            <div class="col-sm-12 col-md-12">
              <a id="recruit-fb-bttn" href="javascript:void(0);"
                 class="btn box1_btn facebook_btn btn-block">
                <span class="icon-btn-share fa fa-facebook"></span>
                <span class="btn-share-text">Share on Facebook</span>
              </a>

            <% if !Challenge.referral_social_challenges.empty? %>
            <p>Click to share your recruiting link on social:</p>
            <% Challenge.referral_social_challenges.each do |ref_social_challenge| %>
            <div class="recruit-share-buttons">
                <section v-for="referral_challenge in challenges" v-if="referral_challenge.mechanism=='referal'||referral_challenge.mechanism=='referral'">
                    <a id="recruit-fb-bttn" href="javascript:void(0);" class="btn-has-icon btn-join-facebook" @click="shareFB(referral_challenge, '')" v-if="referral_challenge.parameters=='facebook'">
                        <span class="share-button-wrap">
                            <span class="icon-btn-share fa fa-facebook"></span>
                            <span class="btn-share-text" v-if="contact&&referral_challenge.has_platform">share on facebook</span>
                            <span class="btn-share-text" v-else>connect with facebook</span>
                        </span>
                    </a>

                    <a id="recruit-twttr-bttn" href="javascript:void(0);" class="btn-has-icon btn-join-twitter" @click="shareFB(referral_challenge, '')" v-if="referral_challenge.parameters=='twitter'">
                        <span class="share-button-wrap">
                            <span class="icon-btn-share fa fa-twitter"></span>
                            <span class="btn-share-text" v-if="contact&&referral_challenge.has_platform">share on twitter</span>
                            <span class="btn-share-text" v-else>connect with twitter</span>
                        </span>
                    </a>
                </section>
            </div>
            <% end %>
            <% end %>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-12 col-md-12">
            <% if !Challenge.referral_social_challenges.empty? %>
            <h4 class="sidelines"><span> OR </span></h4>
            <% end %>
            <p class="emphasis-text">Earn <%= challenge.points %> Points for every friend that signs up with your recruiting link.</p>
            <label class="copy-label">
                Copy your recruting link below and send it via text, email, whatsapp, raven, slide in the DMs, whatever!
            </label>

            <div class="copy-link input-group">
                <input value="<%= @generic_url %>" class="copy-to-clipboard-input form-control" readonly>
                <div class="input-group-append">
                  <button id="copy-button" class="copy-btn btn btn-success"><span class="copy-button-text">COPY</span> <span class="fa fa-link"></span></button>
                </div>
            </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Modal footer -->
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
<script>
$(document).ready(function() {
  <% if @facebook_url %>
  $.ajaxSetup({ cache: true });
  $.getScript('https://connect.facebook.net/en_US/sdk.js', function(){
    FB.init({
      appId: '<%= @conf.facebook_app_id %>',
      version: 'v7.0' // or v2.1, v2.2, v2.3, ...
    });
    $(document).on('click','#recruit-fb-bttn', function(e){
      e.preventDefault();
      FB.ui({
        display: 'popup',
        method: 'share',
        href: '<%= @facebook_url %>'
      }, function(response){

      })
    })
  });
  <% end %>
});
</script>

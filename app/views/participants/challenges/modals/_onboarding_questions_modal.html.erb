<div class="modal fade text-left" id="onboarding_questions_modal">
  <div class="modal-dialog">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <div class="row">
          <div class="col-12">
            <h4 class="modal-title"><%= challenge.caption %></h4>
          </div>
        </div>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">
        <h4><b class="text-center"><%= challenge.title %></b></h4>
        <h6><%= challenge.description %></h6>
        <div class="row">
          <div class="col-12">
            <a href="<%= challenge.link %>" target="_blank" class="btn btn-primary submit-link-challenge"
               data-challenge-id="<%= challenge.id %>">Submit</a>
          </div>
        </div>
      </div>

      <!-- Modal footer -->
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

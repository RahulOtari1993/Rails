<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table class="table table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Post</th>
      <th>Comment</th>
      <th>Button</th>
    
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
         <td><%= comment.post.title %></td>
        <td><%= comment.comment %></td>
        <td><%= link_to 'Show', comment,class:"btn btn-success" %>
        <% if ((comment.user == current_user) || (current_user.admin?)) %>
          <%= link_to 'Edit', edit_comment_path(comment),class:"btn btn-success" %>
          <%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-success" %></td>
       <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_comment_path, class:"btn btn-dark" %>

<% if @challenge.questions.present? %>
  <% @challenge.questions.order(:sequence).each do |question| %>
    <%= render 'admin/campaigns/question_builder/survey_template', template: true, question: question, type: type %>
  <% end %>
<% else %>
  <%= render 'admin/campaigns/question_builder/survey_template', template: false, question: nil, type: type %>
<% end %>

<script id="survey-question-template" type="text/x-custom-template">
  <%= render 'admin/campaigns/question_builder/survey_template', template: true, question: nil, type: type %>
</script>

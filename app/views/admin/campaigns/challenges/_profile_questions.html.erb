<% if @challenge.questions.present? %>
  <% @challenge.questions.order(:created_at).each do |question| %>
    <%= render 'admin/campaigns/question_builder/question_template', template: true, question: question, type: type %>
  <% end %>
<% else %>
  <%= render 'admin/campaigns/question_builder/question_template', template: false, question: nil, type: type %>
<% end %>

<script id="question-template" type="text/x-custom-template">
  <%= render 'admin/campaigns/question_builder/question_template', template: true, question: nil, type: type %>
</script>

<tr style="border-bottom: 1px solid #414561; padding: 0px 5px;">
  <td scope="row" width="5%" class="remove-btn-align" style="padding-left: 15px !important;">
    <a class="remove-challenge-segment" href="javascript:void(0);">
      <i class="feather icon-minus-circle"></i>
    </a>
  </td>

  <td width="30%">
    <%= select_tag "challenge[challenge_filters][][challenge_event]",
                   options_for_select(ChallengeFilter::EVENTS.map { |val| [val.humanize, val] }, ChallengeFilter::CONDITIONS.first),
                   class: 'form-control challenge-event-dd',
                   required: true %>
  </td>

  <td width="30%" class="segment-conditions-container">
    <%= select_tag "challenge[challenge_filters][][challenge_condition]",
                   options_for_select(ChallengeFilter::CONDITIONS.map { |val| [val.humanize, val] }),
                   class: 'form-control segment-conditions-dd segment-conditions-age segment-conditions-points',
                   prompt: 'Select Condition',
                   required: true %>

    <%= select_tag "challenge[challenge_filters][][challenge_condition]",
                   options_for_select([['Has', 'has'], ['Not', 'not']]),
                   class: 'form-control segment-conditions-dd segment-conditions-tags segment-conditions-platforms',
                   prompt: 'Select Condition', style: 'display:none;',
                   required: true %>

    <%= select_tag "challenge[challenge_filters][][challenge_condition]",
                   options_for_select([['Is', 'is'], ['Not', 'not']]),
                   class: 'form-control segment-conditions-dd segment-conditions-gender',
                   prompt: 'Select Condition', style: 'display:none;',
                   required: true %>

    <%= select_tag "challenge[challenge_filters][][challenge_condition]",
                   options_for_select([['Is', 'is']], 'is'),
                   class: 'form-control segment-conditions-dd segment-conditions-rewards',
                   prompt: 'Select Condition', style: 'display:none; cursor: not-allowed;',
                   disabled: true, readonly: true %>
  </td>

  <td width="30%" class="segment-values-container">
    <%= text_field_tag 'challenge[challenge_filters][][challenge_value]', nil,
                       class: 'form-control segment-value-age',
                       placeholder: 'Enter Age' %>

    <%= text_field_tag 'challenge[challenge_filters][][challenge_value]', nil,
                       class: 'form-control segment-value-tags',
                       placeholder: 'Enter Tag', style: 'display:none;' %>

    <%= text_field_tag 'challenge[challenge_filters][][challenge_value]', nil,
                       class: 'form-control segment-value-points',
                       placeholder: 'Enter Points', style: 'display:none;' %>

    <%= select_tag "challenge[challenge_filters][][challenge_value]",
                   options_for_select(@campaign.rewards.all.pluck(:name, :id)),
                   class: 'form-control segment-value-rewards',
                   prompt: 'Select Reward', style: 'display:none;',
                   required: true %>

    <%= select_tag "challenge[challenge_filters][][challenge_value]",
                   options_for_select(ChallengeFilter::SOCIAL_PLATFORMS.map { |val| [val.humanize, val] }),
                   class: 'form-control segment-conditions-platforms',
                   prompt: 'Select Platform', style: 'display:none;',
                   required: true %>

    <%= select_tag "challenge[challenge_filters][][challenge_value]",
                   options_for_select([['Male', 'male'], ['Female', 'female']]),
                   class: 'form-control segment-value-gender',
                   prompt: 'Select Gender', style: 'display:none;',
                   required: true %>
  </td>
</tr>


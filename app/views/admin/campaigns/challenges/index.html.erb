<%= javascript_include_tag 'campaign_admin/challenges', 'data-turbolinks-track' => 'reload' %>
<%= stylesheet_link_tag 'campaign_admin/challenges', 'data-turbolinks-track' => 'reload' %>
<!-- dataTable starts -->
<div class="app-content content">
  <div class="content-overlay"></div>
  <div class="header-navbar-shadow"></div>
  <div class="content-wrapper">
    <div class="content-header row">
      <div class="content-header-left col-md-9 col-12 mb-2">
        <div class="row breadcrumbs-top">
          <div class="col-12">
            <h2 class="content-header-title float-left mb-0">Challenges</h2>
          </div>
        </div>
      </div>
    </div>
    <div class="content-body">
      <section id="data-thumb-view" class="data-thumb-view-header">
        <div class="data_list_100">
          <div class="data_list_20">
            <div class="">
              <div class="filter_title">
                <h4>Filters <span><button class="btn-xs btn-outline-primary reset_challenge_filter_checkboxes">Reset</button></span></h4>
              </div>
              <div class="">
                <h6>Status</h6>
                <ul class="list-unstyled mb-0">
                  <li>
                    <div class="vs-checkbox-con vs-checkbox-primary">
                      <input type="checkbox" value="false" name="filters[status][]" class="challenge_sidebar_filter" id="draft">
                      <span class="vs-checkbox vs-checkbox-sm">
                          <span class="vs-checkbox--check">
                            <i class="vs-icon feather icon-check"></i>
                          </span>
                      </span>
                      <span class="filter_label">draft</span>
                      <i class="icon_side_margin fa fa-circle-o fa_draft fa_circle_sm" aria-hidden="true"></i>
                    </div>
                  </li>
                  <li>
                    <div class="vs-checkbox-con vs-checkbox-primary">
                      <input type="checkbox" value="false" name="filters[status][]" class="challenge_sidebar_filter" id="scheduled">
                      <span class="vs-checkbox vs-checkbox-sm">
                          <span class="vs-checkbox--check">
                            <i class="vs-icon feather icon-check"></i>
                          </span>
                      </span>
                      <span class="filter_label">scheduled</span>
                      <i class="icon_side_margin fa fa-circle-o fa_scheduled fa_circle_sm" aria-hidden="true"></i>
                    </div>
                  </li>
                  <li>
                    <div class="vs-checkbox-con vs-checkbox-primary">
                      <input type="checkbox" value="false" name="filters[status][]" class="icon_side_margin challenge_sidebar_filter" id="active">
                      <span class="vs-checkbox vs-checkbox-sm">
                          <span class="vs-checkbox--check">
                              <i class="vs-icon feather icon-check"></i>
                          </span>
                      </span>
                      <span class="filter_label">active</span>
                      <i class="icon_side_margin fa fa-circle fa_active fa_circle_sm" aria-hidden="true"></i>
                    </div>
                  </li>
                  <li>
                    <div class="vs-checkbox-con vs-checkbox-primary">
                      <input type="checkbox" value="false" name="filters[status][]" class="challenge_sidebar_filter" id="ended">
                      <span class="vs-checkbox vs-checkbox-sm">
                        <span class="vs-checkbox--check">
                            <i class="vs-icon feather icon-check"></i>
                        </span>
                      </span>
                      <span class="filter_label">ended</span>
                      <i class="icon_side_margin fa fa-circle fa_ended fa_circle_sm" aria-hidden="true"></i>
                    </div>
                  </li>
                </ul>
              </div>

              <div class="mt-1">
                <h6>Challenge Type</h6>
                <ul class="list-unstyled mb-0">
                  <li>
                    <div class="vs-checkbox-con vs-checkbox-primary">
                      <input type="checkbox" value="false" name="filters[challenge_type][]" class="challenge_sidebar_filter" id="share">
                      <span class="vs-checkbox vs-checkbox-sm">
                          <span class="vs-checkbox--check">
                              <i class="vs-icon feather icon-check"></i>
                          </span>
                      </span>
                      <span class="filter_label">share</span>
                    </div>         
                  </li>
                  <li>
                    <div class="vs-checkbox-con vs-checkbox-primary">
                      <input type="checkbox" value="false" name="filters[challenge_type][]" class="challenge_sidebar_filter" id="connect">
                      <span class="vs-checkbox vs-checkbox-sm">
                          <span class="vs-checkbox--check">
                              <i class="vs-icon feather icon-check"></i>
                          </span>
                      </span>
                      <span class="filter_label">connect</span>
                    </div> 
                  </li>
                  <li>
                    <div class="vs-checkbox-con vs-checkbox-primary">
                      <input type="checkbox" value="false" name="filters[challenge_type][]" class="challenge_sidebar_filter" id="engage">
                      <span class="vs-checkbox vs-checkbox-sm">
                          <span class="vs-checkbox--check">
                              <i class="vs-icon feather icon-check"></i>
                          </span>
                      </span>
                      <span class="filter_label">engage</span>
                    </div> 
                  </li>
                  <li>
                    <div class="vs-checkbox-con vs-checkbox-primary">
                      <input type="checkbox" value="false" name="filters[challenge_type][]" class="challenge_sidebar_filter" id="collect">
                      <span class="vs-checkbox vs-checkbox-sm">
                          <span class="vs-checkbox--check">
                              <i class="vs-icon feather icon-check"></i>
                          </span>
                      </span>
                      <span class="filter_label">collect</span>
                    </div> 
                  </li>
                </ul>
              </div>

              <div class="mt-1">
                <h6>Platform</h6>
                <ul class="list-unstyled mb-0">
                  <li>
                    <div class="vs-checkbox-con vs-checkbox-primary">
                      <input type="checkbox" value="false" name="filters[platform_type][]"class="challenge_sidebar_filter">
                      <span class="vs-checkbox vs-checkbox-sm">
                          <span class="vs-checkbox--check">
                              <i class="vs-icon feather icon-check"></i>
                          </span>
                      </span>
                      <span class="filter_label">facebook</span>
                    </div> 
                  </li>
                  <li>
                    <div class="vs-checkbox-con vs-checkbox-primary">
                      <input type="checkbox" value="false"  name="filters[platform_type][]" class="challenge_sidebar_filter">
                      <span class="vs-checkbox vs-checkbox-sm">
                          <span class="vs-checkbox--check">
                              <i class="vs-icon feather icon-check"></i>
                          </span>
                      </span>
                      <span class="filter_label">instagram</span>
                    </div> 
                  </li>
                  <li>
                    <div class="vs-checkbox-con vs-checkbox-primary">
                      <input type="checkbox" value="false"  name="filters[platform_type][]" class="challenge_sidebar_filter">
                      <span class="vs-checkbox vs-checkbox-sm">
                          <span class="vs-checkbox--check">
                              <i class="vs-icon feather icon-check"></i>
                          </span>
                      </span>
                      <span class="filter_label">pinterest</span>
                    </div> 
                  </li>
                  <li>
                    <div class="vs-checkbox-con vs-checkbox-primary">
                      <input type="checkbox" value="false"  name="filters[platform_type][]" class="challenge_sidebar_filter">
                      <span class="vs-checkbox vs-checkbox-sm">
                          <span class="vs-checkbox--check">
                              <i class="vs-icon feather icon-check"></i>
                          </span>
                      </span>
                      <span class="filter_label">tumblr</span>
                    </div> 
                  </li>
                  <li>
                    <div class="vs-checkbox-con vs-checkbox-primary">
                      <input type="checkbox" value="false" name="filters[platform_type][]" class="challenge_sidebar_filter">
                      <span class="vs-checkbox vs-checkbox-sm">
                          <span class="vs-checkbox--check">
                              <i class="vs-icon feather icon-check"></i>
                          </span>
                      </span>
                      <span class="filter_label">twitter</span>
                    </div> 
                  </li>
                </ul>
              </div>

              <div class="mt-1">
                <h6>Reward Type</h6>
                <ul class="list-unstyled mb-0">
                  <li class="">
                    <div class="vs-checkbox-con vs-checkbox-primary">
                      <input type="checkbox" value="false">
                      <span class="vs-checkbox vs-checkbox-sm">
                          <span class="vs-checkbox--check">
                              <i class="vs-icon feather icon-check"></i>
                          </span>
                      </span>
                      <span class="filter_label">points</span>
                    </div> 
                  </li>

                  <li class="">
                    <div class="vs-checkbox-con vs-checkbox-primary">
                      <input type="checkbox" value="false">
                      <span class="vs-checkbox vs-checkbox-sm">
                          <span class="vs-checkbox--check">
                              <i class="vs-icon feather icon-check"></i>
                          </span>
                      </span>
                      <span class="filter_label">prize</span>
                    </div>
                  </li>
                </ul>
              </div>

              <div class="mt-1">
                <h6>Users Targetted</h6>
                <p>50-100%</p>
                <div id="tap" class="slider-xs slider-danger noUi-target noUi-ltr noUi-horizontal" id="extra-small-slider">
                  <div class="noUi-base">
                    <div class="noUi-connects">
                      <div class="noUi-connect noUi-draggable" style="transform: translate(8.33333%, 0px) scale(0.833333, 1);"></div>
                    </div>
                    <div class="noUi-origin" style="transform: translate(-872.667%, 0px); z-index: 5;">
                      <div class="noUi-handle noUi-handle-lower" data-handle="0" tabindex="0" role="slider" aria-orientation="horizontal" aria-valuemin="20.0" aria-valuemax="75.0" aria-valuenow="25.0" aria-valuetext="25.00">
                        <div class="noUi-touch-area"></div>
                      </div>
                    </div>
                    <div class="noUi-origin" style="transform: translate(-83.3333%, 0px); z-index: 4;">
                      <div class="noUi-handle noUi-handle-upper" data-handle="1" tabindex="0" role="slider" aria-orientation="horizontal" aria-valuemin="25.0" aria-valuemax="80.0" aria-valuenow="75.0" aria-valuetext="75.00">
                        <div class="noUi-touch-area"></div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <div class="mt-1" style="margin-top: 3px;">
                <h6>Segments Targetted</h6>
                <input class="form-control form-control-sm" type="text" placeholder="Add Segment Filter">
              </div>

              <div class="mt-1" href="#">
                <h6>Creator</h6>
                <input class="form-control form-control-sm" type="text" placeholder="Add Creator Filter">
              </div>

              <div class="mt-1">
                <h6>Tags</h6>
                <%= select_tag :tags,
                                options_for_select(all_tags_humanize),
                                class: 'form-control-sm challenge-tags-filter', multiple: 'multiple' %>
                <div class="tag_box filter-tag-selection" style="padding-top: 5px;">
                </div>
              </div>
            </div>     
          </div>
          <div class="data_list_80">
            <div class="table-responsive">
              <!-- Container for Challenge Details Popup-->
              <div class="challenge_section show-challenge-details-container"></div>

              <table id="challenge-list-table" class="table data-thumb-view" campaign_id='<%= @campaign.id %>'>
              </table>
            </div>
          </div>
          <!-- Download CSV Popup Container -->
          <div class="challenge-participant-popup-container"></div>
        </div>
      </section>
    </div>
  </div>
</div>

<script id="filter-tag-template" type="text/x-custom-template">
  <div class="chip challenge-tags-filter-chip ---TAG-UI---" data-tag-val="---TAG-VAL---">
    <div class="chip-body">
      <span class="chip-text tag-chip-val">---TAG-HTML---</span>
      <div class="chip-closeable">
        <i class="feather icon-minus-circle"></i>

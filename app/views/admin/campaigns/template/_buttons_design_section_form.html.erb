            <%= text_field_tag "campaign_template_detail[element_css_style][custom-button-hover][][value]", get_element_design_property('custom-button-hover', 'border-radius')["value"] , class: "form-control input_bg", id: "basicInput",  placeholder: "Enter value" %>
          </fieldset>
          <div class="form-group edit_input_drop">
            <%= select_tag 'campaign_template_detail[element_css_style][custom-button-hover][][unit]', options_for_select(unit_options_list, get_element_design_property('custom-button-hover', 'border-radius')["unit"]), include_blank: 'Select', class: 'select2 form-control' %>
          </div>
        </div>
        <div class="clear"></div>
      </div>
    </div>
    <hr class="mb-2"/>

    <div class="edit_input_row input_pb">
      <p>Padding</p>
      <div class="edit_input">
        <fieldset class="form-group edit_input_width">
          <%= hidden_field_tag "campaign_template_detail[element_css_style][custom-button][][name]", 'padding-top' %>
          <%= text_field_tag "campaign_template_detail[element_css_style][custom-button][][value]", get_element_design_property('custom-button', 'padding-top')["value"] , class: "form-control input_bg", id: "basicInput",  placeholder: "Top" %>

        <%= select_tag "custom-button[padding][unit]", options_for_select(unit_options_list, get_element_design_property('custom-button', 'padding')["value"]), class: 'select2 form-control', id: 'button_padding_unit' %>
      </div>
    </div>
    <div class="clear"></div>

  </div>
  <div class="clear"></div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    assignPaddingUnit();

    $('#button_padding_unit').change(function() {
      assignPaddingUnit();
    });
  });


  function assignPaddingUnit() {
    unit = $('#button_padding_unit').val();
    $('.button-padding-unit').each(function() {
      $(this).val(unit)
    });
  }
</script>

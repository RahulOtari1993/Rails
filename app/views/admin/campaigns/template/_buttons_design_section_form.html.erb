        </fieldset>
        <fieldset class="form-group edit_input_width">
          <%= hidden_field_tag "campaign_template_detail[element_css_style][custom-button][][name]", 'padding-right' %>
          <%= text_field_tag "campaign_template_detail[element_css_style][custom-button][][value]", get_element_design_property('custom-button', 'padding-right')["value"] , class: "form-control input_bg", id: "basicInput",  placeholder: "Right" %>
          <%= hidden_field_tag "campaign_template_detail[element_css_style][custom-button][][unit]", get_element_design_property('custom-button', 'padding-right')["value"] , class: 'button-padding-unit' %>
        </fieldset>

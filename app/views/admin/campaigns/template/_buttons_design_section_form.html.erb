        </div>
        <div class="clear"></div>
      </div>

      <div class="tab-pane" id="button_HOVER" role="tabpanel" aria-labelledby="profile-tab-justified">
        <div class="main_box">
          <div class="left">
            <p>Text Color</p>
          </div>
          <div class="right">
            <%= hidden_field_tag "campaign_template_detail[element_css_style][custom-button-hover][][name]", "color" %>
            <div class="input-group color-picker-giro">

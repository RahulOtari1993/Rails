        </div>
        <div class="clear"></div>

        <div class="edit_input_row">
          <p>Border Radius</p>
          <fieldset class="form-group edit_input">
            <%= hidden_field_tag "campaign_template_detail[element_css_style][custom-button][][name]", 'border-radius' %>
            <%= text_field_tag "campaign_template_detail[element_css_style][custom-button][][value]", get_element_design_property('custom-button', 'border-radius')["value"],  class: "form-control input_bg", id: "basicInput",  placeholder: "Enter value" %>
          </fieldset>
          <div class="form-group edit_input_drop">
            <%= select_tag 'campaign_template_detail[element_css_style][custom-button][][unit]', options_for_select(unit_options_list, get_element_design_property('custom-button', 'border-radius')["unit"]), include_blank: 'Select', class: 'select2 form-control' %>

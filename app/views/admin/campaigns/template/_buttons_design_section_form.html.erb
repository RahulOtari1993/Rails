      </li>
      <li class="nav-item">
        <a class="nav-link" id="profile-tab-justified" data-toggle="tab" href="#button_HOVER" role="tab" aria-controls="button_HOVER" aria-selected="true">HOVER</a>
      </li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content pt-1">
      <div class="tab-pane active" id="button_NORMAL" role="tabpanel" aria-labelledby="home-tab-justified">
        <div class="main_box">
          <div class="left">
            <p>Text Color</p>
          </div>
          <div class="right">
            <%= hidden_field_tag "campaign_template_detail[element_css_style][custom-button][][name]", "color" %>
            <div class="input-group color-picker-giro">
              <span class="input-group-addon color-picker-giro-preview">&nbsp;</span>

<div class="modal fade text-left" id="participant-details-popup" tabindex="-1" role="dialog" aria-labelledby="participant-details-popup" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-width" role="document">
    <div class="modal-content">
      <div class="modal-header bg-primary white">
        <h6 class="modal-title">
          <span style="visibility: hidden;"><%= @participant.full_name %></span>
        </h6>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body profile_modal_body">
        <h4 class="participant-name-container" data-participant-id="<%= @participant.id %>"
            data-campaign-id="<%= @participant.campaign_id %>" style="display: none;">
        </h4>

        <div class="container p-0">
          <div class="row">
            <div class="col-md-4">
              <div class="challenge_img" style="background-image: url(<%= @participant.avatar.url %>);
                  background-position: center; background-repeat: no-repeat; background-size: cover;">
              </div>

              <h6 class="text-center">find them on:</h6>
              <div class="modal_social_box">
                <i class="fa fa-facebook" aria-hidden="true"></i>
                <i class="fa fa-twitter" aria-hidden="true"></i>
                <i class="fa fa-instagram" aria-hidden="true"></i>
              </div>
            </div>

            <div class="col-md-8">
              <h4 class="user_name"><%= @participant.full_name %></h4>
              <h6><%= @participant.email %></h6>

              <% if @participant.full_address.present? %>
                <h6><i class='fa fa-map-marker' aria-hidden='true'></i>
                  <%= @participant.full_address.html_safe %>
                </h6>
              <% end %>

              <div class="participant-status-container">
                <p class="participant_id_container">
                  <span class="participant-status-left">
                    User ID: <span class="participant_id_container"><%= @participant.p_id %></span>
                  </span>
                </p>
                <p class="participant-status-right" style="float: left; display: inline-flex;"><span>Status:</span>
                  <%= select_tag "participant-status",
                                 options_for_select(Participant.statuses.map { |val| [val[0].humanize, val[0]] }, @participant.status),
                                 {class: 'form-control participant-status-dd', required: true} %>
                </p>
                <div style="clear: both;"></div>
              </div>

              <table class="modal_profile_info">
                <tr>
                  <% if @participant.gender.present? %>
                    <td>
                      <i class='fa fa-male' aria-hidden='true' style='width:auto;'></i><i class='fa fa-female' aria-hidden='true' style='width:11px;'></i>
                      <span><%= @participant.gender.humanize %></span>
                    </td>
                  <% end %>

                  <% if participant_birth_date(@participant).present? || participant_age(@participant).present? %>
                    <td>
                      <i class='fa fa-birthday-cake' aria-hidden='true'></i>
                      <span><%= participant_birth_date(@participant) %></span>
                      <%= participant_age(@participant) %> years old
                    </td>
                  <% end %>
                </tr>

                <tr>
                  <td>
                    <i class="fa fa-users" aria-hidden="true"></i>
                    <span><%= @participant.recruits %></span> recruits
                  </td>

                  <td>
                    <i class="fa fa-calendar-check-o" aria-hidden="true"></i>
                    <span><%= @participant.sign_in_count %></span> total logins
                  </td>
                </tr>

                <tr>
                  <td>
                    <i class="fa fa-user-plus" aria-hidden="true"></i>
                    <span><%= @participant.created_at.strftime("%m/%d/%y") %></span> (Join Date)
                  </td>

                  <% if @participant.last_sign_in_at.present? %>
                    <td>
                      <i class="fa fa-clock-o" aria-hidden="true"></i>
                      <span><%= @participant.last_sign_in_at.strftime("%m/%d/%y") %></span> (Date Last Active)
                    </td>
                  <% end %>
                </tr>
              </table>

              <div class="tag_box">
                <div class="participant-tags-container">
                  <%= render 'tags_list' %>
                </div>
                <div class="add_tag add-tag-btn">
                  <i class="feather icon-plus-circle add-tag-chip-btn"></i>
                </div>
                <div class="input-group add_tag_btngroup" style="display: none;">
                  <div class="add_tag remove-tag-btn">
                    <i class="feather icon-minus-circle add-tag-chip-btn"></i>
                  </div>
                  <%= select_tag 'participant_tags_input', options_for_select(all_tags_humanize),
                                 class: 'form-control participant-tags participant-details-tags', multiple: 'multiple' %>

                  <button class="btn btn-primary waves-effect waves-light submit-participant-tag" type="button" style="margin-left: 15px;">
                    Add Tag
                  </button>
                </div>
              </div>
            </div>
          </div>
          <div class="row gradient_btn_box">
            <div class="col-md-3 pl-0">
              <div class="form-group text-center">
                <button type="button" class="btn bg-gradient-primary mr-1  btn-block waves-effect waves-light">
                  <%= @participant.unused_points %>
                  <p><span><%= @participant.points %></span> lifetime</p>
                </button>
                <h6>Current Points</h6>
              </div>
            </div>
            <div class="col-md-3 pl-0">
              <div class="form-group text-center">
                <button type="button" class="btn bg-gradient-info mr-1 btn-block waves-effect waves-light">
                  <%= @participant.completed_challenges %>
                </button>
                <h6>Challenges Completed</h6>
              </div>
            </div>
            <div class="col-md-3 pl-0">
              <div class="form-group text-center">
                <button type="button" class="btn bg-gradient-warning mr-1 btn-block waves-effect waves-light">74</button>
                <h6>Total Content Shares</h6>
              </div>
            </div>
            <div class="col-md-3 pr-0 pl-0">
              <div class="form-group text-center">
                <button type="button" class="btn bg-gradient-success mr-1 btn-block waves-effect waves-light">2,209</button>
                <h6>Total Clicks from Shares</h6>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="modal_tab modal_tab_table">
              <ul class="nav nav-tabs" role="tablist">
                <li class="nav-item">
                  <a class="nav-link active" id="activity-feed-tab" data-toggle="tab" href="#activity-feed-list" role="tab">
                    Activity Feed
                  </a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" id="rewards-tab" data-toggle="tab" href="#rewards-list" role="tab">
                    Rewards
                  </a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" id="notes-tab" data-toggle="tab" href="#notes-list" role="tab">
                    Notes
                  </a>
                </li>
              </ul>
              <div class="tab-content">
                <%= render 'activities' %>
                <%= render 'rewards' %>
                <%= render 'notes' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade text-left" id="reward_user" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel1">Reward Conatcts</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                  <table class="table">
                      <thead>
                          <tr>
                              <th>First Name</th>
                              <th>Family Name</th>
                              <th>Email</th>
                              <th>Earned Date</th>
                          </tr>
                      </thead>
                      <tbody>
                        <% r.reward_users.each do |r_c|%>
                          <tr>
                            <td scope="row"><%= "CJ" %></td>
                            <td><%= "CJ"%> <%= "jha"%> </td>
                            <td><%= "mail" %></td>
                            <td>
                              <%= "creeatd" %></td>
                          </tr>
                        <% end %>
                      </tbody>
                  </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Accept</button>
            </div>
        </div>
    </div>
</div>
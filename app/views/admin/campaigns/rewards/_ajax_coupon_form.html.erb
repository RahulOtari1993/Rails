<div class="modal fade text-left" id="coupon_user" tabindex="-1" role="dialog" aria-labelledby="reward_user" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel1">Coupons</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
              <h3 class="modal-title" id="myModalLabel1">Add Coupons</h4>
              <%= form_with(url: admin_campaign_reward_create_coupon_path(@reward.campaign, @reward, @coupon), model: @coupon, local: true) do |f|%>
                <%= f.label :coupon_codes %>
                <span class="column-info">Enter the new coupon codes you want associated with this reward.
                </span>
                <%= f.text_field :code,class: "form-control"%>
              <% end %>
              <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Coupon</th>
                            <th>Contact</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                      <% if @coupons.present?%>
                        <% @coupons.each do |coupon|%>
                          <tr>
                            <td scope="row"><%= coupon.code %></td>
                            <td><%= coupon.reward_user.user.email if coupon.reward_user_id.present? %> </td>
                            <td><%= coupon.created_at %></td>
                          </tr>
                        <% end %>
                      <% end %>
                    </tbody>
                </table>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
              <button type="button" class="btn btn-primary coupon_save" data-dismiss="modal">Save</button>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
  $('.coupon_save').on('click', function(e){
    $('form').submit();
  })
</script>>
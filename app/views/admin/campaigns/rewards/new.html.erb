<div class="app-content content">
  <div class="content-overlay"></div>
  <div class="header-navbar-shadow"></div>
  <div class="content-wrapper">
    <div class="content-body">
			<section id="basic-vertical-layouts">
				<div class="row match-height">
					<div class="col-md-12 col-12">
			        <div class="card">
			            <div class="card-header">
			                <h4 class="card-title">Create Reward</h4>
			            </div>
			        <div class="card-content">
			        	<%= form_with(url: admin_campaign_rewards_path(@reward.campaign, @reward), method: 'post', class: 'edit-campaign-form', model: @reward, local: true) do |form| %>
			            <div class="card-body">
			                <form class="form form-vertical">
			                    <div class="form-body">
			                        <div class="row">
			                            <div class="col-12">
			                                <div class="form-group">
			                                		<%= form.label :name %>
			                                    <!-- <label for="first-name-icon">Name</label><br/> -->
			                                    <span class="column-info">Enter a friendly name to describe this reward.</span>
			                                    <div class="position-relative has-icon-left">
			                                    	<%= form.text_field :name, id: 'first-name-icon',class: "form-control", placeholder: 'Name' %>
			                                        <div class="form-control-position">
			                                            <i class="feather icon-user"></i>
			                                        </div>
			                                    </div>
			                                </div>
			                            </div>
			                            <div class="col-12">
			                                <div class="form-group">
			                                    <%= form.label :description %>
			                                    <span class="column-info">Describe the prize and the selection process.
																					</span>
			                                    <div class="position-relative">
			                                    	<fieldset class="form-label-group">
			                                    		<%= form.text_area :description, class: "form-control", id: 'label-textarea', rows: '3', placeholder: "Description"%>
                                              </fieldset>
			                                    </div>
			                                </div>
			                            </div>
			                            <div class="col-12">
			                                <div class="form-group">
			                                    <%= form.label :redemption %>
			                                    <span class="column-info">A message to the user once they have been awarded this prize how to claim it.
																					</span>
			                                    <div class="position-relative">
			                                    	<fieldset class="form-label-group">
			                                    		<%= form.text_area :redeption_details, class: "form-control", id: 'label-textarea', rows: '3', placeholder: "Redemption"%>
                                            </fieldset>
			                                    </div>
			                                </div>
			                            </div>
			                            <div class="col-12">
			                                <div class="form-group">
			                                    <%= form.label :description_details %>
			                                    <span class="column-info">Additional information about this product to display to the user when the click details.</span>
			                                    <div class="position-relative">
			                                    	<fieldset class="form-label-group">
			                                    		<%= form.text_area :description_details, class: "form-control", id: 'label-textarea', rows: '3', placeholder: "Description Details"%>
                                              </fieldset>
			                                    </div>
			                                </div>
			                            </div>
			                            <div class="col-12">
			                                <div class="form-group">
			                                    <%= form.label :limit %>
			                                    <span class="column-info">The number of people who can get this reward.
																					</span>
			                                    <div class="position-relative">
			                                    	<div class="input-group">
                                              <%= form.number_field :limit, class: "touchspin form-control", value: '0' %>
                                            </div>
			                                    </div>
			                                </div>
			                            </div>
			                            <div class="col-12">
			                                <div class="form-group">
			                                    <%= form.label :selection %>
			                                    <span class="column-info">Selection is how the reward will be awarded. If manual its up to the admin to set the winners or through challenges. With selection it allows users to trade in points.
																					</span>
			                                    <div class="position-relative">
			                                    	<div class="form-group">
			                                    		<%= form.select(:selection, options_for_select(Reward::SELECTIONS, :selected => form.object.selection), {}, {class: "select2 form-control"}) 
			                                    		%>			
			                                    	</div>
			                                    </div>
			                                </div>
			                            </div>
			                            <div class="col-12">
			                                <div class="form-group">
			                                    <%#= form.label :feature %>
			                                   <!--  <span class="column-info">This is an option for if this content is to be featured in various locations on the site.
																					</span> -->
			                                    <div class="position-relative">
			                                    	<fieldset>
                                               <div class="vs-checkbox-con vs-checkbox-primary">
                                               	<%= form.check_box :feature, class: '' %>
                                                <span class="vs-checkbox">
                                                    <span class="vs-checkbox--check">
                                                        <i class="vs-icon feather icon-check"></i>
                                                    </span>
                                                </span>
                                                <span class="">feature</span>
                                                <span class="column-info">This is an option for if this content is to be featured in various locations on the site.
																								</span>
                                               </div>
                                                </fieldset>
			                                    </div>
			                                </div>
			                            </div>
			                            <div class="col-12">
			                                <div class="form-group">
			                                		<%= form.label :points %>
			                                    <!-- <label for="first-name-icon">Name</label><br/> -->
			                                    <span class="column-info">This is an 	to give points by assigning a user to a reward.
																					</span>
			                                    <div class="position-relative">
			                                    	<%= form.text_field :points, id: 'first-name-icon',class: "form-control", placeholder: 'Points' %>
			                                        <!-- <div class="form-control-position">
			                                            <i class="feather icon-user"></i>
			                                        </div> -->
			                                    </div>
			                                </div>
			                            </div>
			                            <div class="col-12">
			                                <div class="form-group">
			                                    <%= form.label :terms_conditions %>
			                                    <span class="column-info">Optional terms and conditions for this reward.
																					</span>
			                                    <div class="position-relative">
			                                    	<fieldset class="form-label-group">
			                                    		<%= form.text_area :terms_conditions, class: "form-control", id: 'label-textarea', rows: '3', placeholder: "Terms & Conditions"%>
                                              </fieldset>
			                                    </div>
			                                </div>
			                            </div>
			                            <div class="col-12">
			                                <div class="col-6 form-group">
			                                    <%= form.label :start %>
			                                    <span class="column-info">This is the date the challenge will become visible.
																					</span>
			                                    <div class="position-relative">
			                                    	<fieldset class="form-label-group">
			                                    		<%= form.text_field :start, class: "form-control pickadate"%>
                                            </fieldset>
			                                    </div>
			                                </div>
			                                <div class=" col-6 form-group">
			                                    <%= form.label :end_date %>
			                                    <span class="column-info">This is the date the challenge will become visible.
																					</span>
			                                    <div class="position-relative">
			                                    	<fieldset class="form-label-group">
			                                    		<%= form.text_field :finish, class: "form-control pickadate"%>
                                            </fieldset>
			                                    </div>
			                                </div>
			                            </div>
			                            <div class="col-12">
			                            	<div class="form-group">
																    	<%= form.file_field :image, class: "form-control" %>
																  	</div>
																	</div>
			                            <div class="col-12">
			                                <button type="submit" class="btn btn-primary mr-1 mb-1">Submit</button>
			                                <button type="reset" class="btn btn-outline-warning mr-1 mb-1">Reset</button>
			                            </div>
			                        </div>
			                    </div>
			                </form>
			            </div>
			          <% end %>
			        </div>
			    </div>
			  </div>
			</section>
		</div>
	</div>
</div>
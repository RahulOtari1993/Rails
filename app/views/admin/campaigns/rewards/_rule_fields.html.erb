<tr style="border-bottom: 1px solid #414561; padding: 0px 5px;">
  <td scope="row" width="5%" class="remove-btn-align" style="padding-left: 15px !important;">
    <a class="remove-rule-segment" href="javascript:void(0);">
      <i class="feather icon-minus-circle"></i>
    </a>
  </td>

  <td width="35%">
    <%= select_tag "reward[reward_rules_attributes][#{rule_name_convention(filter)}][reward_rule]",
                   options_for_select(RewardRule::RULES.map { |val| [val.humanize, val] },
                    rule_event(filter, RewardRule::RULES.first)),
                   { class: 'form-control reward-rule-event-dd',
                   required: true }%>
  </td>

  <td width="35%" class="segment-conditions-container">
    <%= select_tag "reward[reward_rules_attributes][#{rule_name_convention(filter)}][rule_condition]",
                   options_for_select(RewardRule::CONDITIONS.map { |val| [val.humanize, val] }, rule_condition_value(filter, '')), {class: 'form-control rule-conditions-dd rule-conditions-challenges-completed rule-conditions-number-of-logins rule-conditions-points rule-conditions-recruits',id: "rule-conditions-dd-#{rule_id_convention(filter)}",
                   prompt: 'Select Condition', disabled: rule_make_disabled(filter, ['challenges-completed', 'points', 'number-of-logins', 'recruits']),
                   required: true, style: "display:#{rule_make_visible(filter, ['challenges-completed', 'points', 'number-of-logins', 'recruits'])};"} %>
  </td>

  <td width="30%" class="segment-values-container">
    <%= text_field_tag "reward[reward_rules_attributes][#{rule_name_convention(filter)}][rule_value]",
                       rule_event_value(filter, nil, 'points'),
                       class: 'form-control rule-value-points', disabled: rule_make_disabled(filter, ['points']),
                       id: "rule-segment-value-age-#{rule_id_convention(filter)}",
                       placeholder: 'Enter Points', style: "display:#{rule_make_visible(filter, ['points'])};" %>

    <%= text_field_tag "reward[reward_rules_attributes][#{rule_name_convention(filter)}][rule_value]", reward_event_value(filter, nil, 'number-of-logins'),
                       class: 'form-control segment-value-number-of-logins',disabled: rule_make_disabled(filter, ['number-of-logins']),
                       d: "rule-segment-value-number-of-logins-#{rule_id_convention(filter)}",
                       placeholder: 'Enter Login Count', style: "display:#{rule_make_visible(filter, ['number-of-logins'])};" %>

    <%= text_field_tag "reward[reward_rules_attributes][#{rule_name_convention(filter)}][rule_value]", rule_event_value(filter, nil, 'challenges-completed'),
                       class: 'form-control segment-value-challenges-completed',disabled: rule_make_disabled(filter, ['challenges-completed']), id: "rule-segment-value-challenges-completed-#{rule_id_convention(filter)}", placeholder: 'Enter Count', style: "display:#{rule_make_visible(filter, ['challenges-completed'])};" %>
    
    <%= text_field_tag "reward[reward_rules_attributes][#{rule_name_convention(filter)}][rule_value]", rule_event_value(filter, nil, 'recruits'),
                       class: 'form-control segment-value-recruits',disabled: rule_make_disabled(filter, ['recruits']), id: "rule-segment-value-recruits-#{rule_id_convention(filter)}", placeholder: 'Enter Recruits Count', style: "display:#{rule_make_visible(filter, ['recruits'])};" %>
  </td>
  <% if filter.present? %>
    <!-- Display ID of Challenge Filter Only in Edit Mode-->
    <%= hidden_field_tag "rule[rule_filters_attributes][#{filter.id}][id]", filter.id %>
  <% end %>
</tr>


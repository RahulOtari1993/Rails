var buttonLink = $('.user-<%= @user.id %> > a');
<% if @user.is_active == true %>
  buttonLink.html('Deactivate').removeClass('btn-success').addClass('btn-warning');
  buttonLink.attr('data-confirm', "Are you sure you want to deactivate this user?");
<% else %>
  buttonLink.html('Activate').removeClass('btn-warning').addClass('btn-success');
  buttonLink.attr('data-confirm', "Are you sure you want to activate this user?");
<% end %>

$('.user-status-<%= @user.id %>').html('<%= @user.is_active? ? 'YES' : 'NO' %>');

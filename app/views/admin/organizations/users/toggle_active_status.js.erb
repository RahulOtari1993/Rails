var buttonLink = $('.user-<%= @user.id %> > button');
var chipDiv = $('.main-chip-div-<%= @user.id %>');
var chipText = $('.user-chip-text-<%= @user.id %>');

<% if @user.is_active == true %>
  chipDiv.removeClass('chip-warning').addClass('chip-success');
  chipText.html('YES');
  buttonLink.html('Deactivate');
  buttonLink.removeClass('btn-success').addClass('btn-warning');
<% else %>
  chipDiv.removeClass('chip-success').addClass('chip-warning');
  chipText.html('<%= '&nbsp;NO'.html_safe %>');
  buttonLink.html('Activate');
  buttonLink.removeClass('btn-warning').addClass('btn-success');
<% end %>

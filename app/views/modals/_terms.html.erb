<section class="modal" id="termsModal">
  <div class="modal-inner small-modal">
    <button class="modal-close-btn btn-icon">
      <svg viewBox="0 0 100 100" class="icon-close-modal">
        <use xlink:href="#svg-close" processed="false"></use>
      </svg>
    </button>
    <div>
      <div>
        <div class="modal-header">
          <h1>Terms & Conditions</h1>
        </div>
        <div class="modal-fields ql-editor">
          <%= raw @campaign.terms %>
        </div>
      </div>
    </div>
  </div>
</section>
